<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>screen-fade</include>
	<controls>
		<include>backgroundvideo</include>
		<control type="label">
			<!-- Screen heading -->
			<left>1419</left>
			<top>38</top>
			<width>471</width>
			<height>75</height>
			<label>$LOCALIZE[10522]</label>
			<font>font18</font>
			<wrapmultiline>true</wrapmultiline>
		</control>
		
		<include file="View-List.xml">ListView</include>
		
		<control type="videowindow">
			<left>80</left>
			<top>188</top>
			<width>928</width>
			<height>656</height>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="group">
			<visible>Player.HasVideo</visible>
			<control type="label">
				<left>52</left>
				<top>852</top>
				<width>928</width>
				<height>45</height>
				<font>font12</font>
				<label>$INFO[VideoPlayer.Title]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="progress">
				<left>52</left>
				<top>908</top>
				<width>660</width>
				<height>22</height>
				<info>Player.Progress</info>
			</control>
			<control type="label">
				<!-- Time/Duration Label -->
				<left>728</left>
				<top>900</top>
				<width>300</width>
				<height>38</height>
				<font>font11</font>
				<label>$INFO[VideoPlayer.Time]$INFO[VideoPlayer.Duration, / ]</label>
			</control>
		</control>
		<control type="group">
			<top>1080</top>
			<include>View-as</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>690</left>
				<top>318</top>
				<width>597</width>
				<height>534</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>716</left>
				<top>338</top>
				<width>543</width>
				<height>504</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<itemgap>0</itemgap>
				<control type="button" id="20">
					<!-- Shuffle -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<label>$LOCALIZE[191]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="radiobutton" id="28">
					<!-- Randomize -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<label>$LOCALIZE[13319]</label>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
				</control>
				<control type="button" id="26">
					<!-- Repeat -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="21">
					<!-- Save -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<label>$LOCALIZE[190]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="22">
					<!-- Clear -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<label>$LOCALIZE[192]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="1200">
					<!-- Player controls -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<textoffsetx>15</textoffsetx>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<enable>Player.HasAudio | Player.HasVideo</enable>
				</control>
			</control>
		</control>
	</controls>
</window>