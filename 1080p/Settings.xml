<window>
	<defaultcontrol>8999</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>screen-fade</include>
	<previouswindow>Home</previouswindow>
	<controls>
		<include>background</include>
		<include>xtv-box</include>
		<include>Fake-Overlay</include>
		<control type="label">
			<!-- Screen heading -->
			<left>1419</left>
			<top>75</top>
			<width>465</width>
			<height>48</height>
			<label>$LOCALIZE[31035]</label>
			<font>font18</font>
		</control>
		<!-- Markers for control area items -->
		<control type="image">
			<left>1512</left>
			<top>138</top>
			<width>36</width>
			<height>36</height>
			<texture>scroll-up.png</texture>
			<visible>Container(8999).HasPrevious</visible>
		</control>
		<control type="image">
			<left>1512</left>
			<top>987</top>
			<width>36</width>
			<height>36</height>
			<texture>scroll-down.png</texture>
			<visible>Container(8999).HasNext</visible>
		</control>
		<control type="group">
			<visible>Control.IsVisible(8999)</visible>
			<left>1170</left>
			<top>168</top>
			<control type="list" id="8999">
				<left>0</left>
				<top>0</top>
				<width>720</width>
				<height>825</height>
				<scrolltime>100</scrolltime>
				<viewtype label="List">list</viewtype>
				<itemlayout width="720" height="75">
					<control type="label">
						<left>27</left>
						<top>12</top>
						<width>660</width>
						<height>45</height>
						<font>font12</font>
						<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<left>657</left>
						<top>15</top>
						<width>45</width>
						<height>45</height>
						<texture>scroll-right.png</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="720" height="75">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>720</width>
						<height>75</height>
						<texture border="8">default-button.png</texture>
					</control>
					<control type="label">
						<left>27</left>
						<top>12</top>
						<width>660</width>
						<height>45</height>
						<font>font12</font>
						<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<left>657</left>
						<top>15</top>
						<width>45</width>
						<height>45</height>
						<texture>scroll-right-focus.png</texture>
						<aspectratio>keep</aspectratio>
					</control>
				</focusedlayout>
				<content>
					<item>
						<!-- Appearance -->
						<label>$LOCALIZE[480]</label>
						<onclick>Activatewindow(AppearanceSettings)</onclick>
					</item>
					<item>
						<!-- Videos -->
						<label>$LOCALIZE[3]</label>
						<onclick>Activatewindow(VideosSettings)</onclick>
					</item>
					<item>
						<!-- TV -->
						<label>$LOCALIZE[19020]</label>
						<onclick>Activatewindow(PVRSettings)</onclick>
					</item>
					<item>
						<!-- Music -->
						<label>$LOCALIZE[2]</label>
						<onclick>Activatewindow(MusicSettings)</onclick>
					</item>
					<item>
						<!-- Pictures -->
						<label>$LOCALIZE[1]</label>
						<onclick>Activatewindow(PicturesSettings)</onclick>
					</item>
					<item>
						<!-- Addons -->
						<label>$LOCALIZE[24001]</label>
						<onclick>Activatewindow(AddonBrowser)</onclick>
					</item>
					<item>
						<!-- Weather -->
						<label>$LOCALIZE[8]</label>
						<onclick>Activatewindow(WeatherSettings)</onclick>
					</item>
					<item>
						<!-- Services -->
						<label>$LOCALIZE[14036]</label>
						<onclick>Activatewindow(servicesettings)</onclick>
					</item>
					<item>
						<!-- System -->
						<label>$LOCALIZE[13000]</label>
						<onclick>Activatewindow(SystemSettings)</onclick>
					</item>
					<item>
						<!-- Profiles -->
						<label>$LOCALIZE[13200]</label>
						<onclick>ActivateWindow(Profiles)</onclick>
					</item>
					<item>
						<!-- File Manager -->
						<label>$LOCALIZE[10003]</label>
						<onclick>ActivateWindow(filemanager)</onclick>
					</item>
					<item>
						<!-- System Info -->
						<label>$LOCALIZE[138]</label>
						<onclick>Activatewindow(systeminfo)</onclick>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>