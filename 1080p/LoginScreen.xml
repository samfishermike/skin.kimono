<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">52</defaultcontrol>
	<visible>!Window.IsActive(startup)</visible>
	<allowoverlay>no</allowoverlay>
	<include>screen-fade</include>
	<controls>
		<include>background</include>
		<control type="grouplist">
			<left>1419</left>
			<top>75</top>
			<width>auto</width>
			<height>48</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<!-- Load profile heading label -->
				<width max="384">auto</width>
				<height>48</height>
				<label>$LOCALIZE[20092]</label>
				<font>font18</font>
			</control>
			<control type="label">
				<!-- Number of files -->
				<top>20</top>
				<width max="120">auto</width>
				<height>48</height>
				<label>$INFO[Container(52).NumItems,(,)]</label>
			</control>
		</control>
		<control type="fixedlist" id="52">
			<viewtype label="31941">List</viewtype>
			<left>360</left>
			<top>174</top>
			<width>1200</width>
			<height>684</height>
			<focusposition>1</focusposition>
			<movement>2</movement>
			<scrolltime>200</scrolltime>
			<preloaditems>2</preloaditems>
			<itemlayout width="1200" height="171">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>171</width>
					<height>171</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<left>225</left>
					<top>24</top>
					<width>939</width>
					<height>46</height>
					<font>font18</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">
					<left>225</left>
					<top>108</top>
					<width>939</width>
					<height>38</height>
					<textcolor>disabled-text</textcolor>
					<label>$INFO[ListItem.Label2]</label>
				</control>
			</itemlayout>
			<focusedlayout width="1200" height="171">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>171</width>
					<height>171</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<left>225</left>
					<top>24</top>
					<width>939</width>
					<height>46</height>
					<font>font18</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
				<control type="label">
					<left>225</left>
					<top>108</top>
					<width>939</width>
					<height>38</height>
					<textcolor>disabled-text</textcolor>
					<label>$INFO[ListItem.Label2]</label>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<top>99</top>
			<visible>Control.IsVisible(52)</visible>
			<control type="group">
				<control type="image">
					<!-- Slider -->
					<left>561</left>
					<top>417</top>
					<width>987</width>
					<height>171</height>
					<texture border="12">default-button.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<animation condition="Container(52).Position(0)" effect="slide" start="0,0" end="0,-342" time="0" easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container(52).Position(1)" effect="slide" start="0,0" end="0,-171" time="0" easing="inout" reversible="true">Conditional</animation>
				<!-- Animation for postion 2 does nothing, so remove -->
				<animation condition="Container(52).Position(3)" effect="slide" start="0,0" end="0,171" time="0" easing="inout" reversible="true">Conditional</animation>
			</control>
		</control>
		<control type="label">
			<!-- Current Profile name -->
			<left>342</left>
			<top>1016</top>
			<width>1236</width>
			<height>46</height>
			<align>center</align>
			<label>$LOCALIZE[13204] $INFO[System.ProfileName]</label>
			<font>font18</font>
		</control>
	</controls>
</window>