<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<include>screen-fade</include>
	<controls>
		<include>fadebackground</include>
		<control type="group">
			<control type="image">
				<!-- Dialog background image -->
				<posx>600</posx>
				<posy>45</posy>
				<width>720</width>
				<height>990</height>
				<texture border="12">button-menu-background.png</texture>
			</control>
			<control type="label">
				<!-- Dialog heading -->
				<posx>660</posx>
				<posy>69</posy>
				<width>645</width>
				<height>60</height>
				<font>font12</font>
				<label>$LOCALIZE[19222] - $INFO[VideoPlayer.ChannelName]</label>
				<align>center</align>
			</control>
			<control type="label">
				<!-- Selected items date -->
				<posx>660</posx>
				<posy>135</posy>
				<width>645</width>
				<height>45</height>
				<font>font11</font>
				<label>$INFO[Container(11).ListItem.StartDate]</label>
				<align>center</align>
			</control>
			<control type="list" id="11">
				<posx>645</posx>
				<posy>195</posy>
				<width>615</width>
				<height>735</height>
				<onleft>60</onleft>
				<onright>60</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<viewtype label="535">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="52" width="615">
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>150</width>
						<height>45</height>
						<selectedcolor>listselected-text</selectedcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>
					<control type="image">
						<posx>180</posx>
						<posy>8</posy>
						<width>30</width>
						<height>30</height>
						<texture>overlayisrecording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<posx>180</posx>
						<posy>8</posy>
						<width>30</width>
						<height>30</height>
						<texture>overlayhastimer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>
					<control type="label">
						<posx>600</posx>
						<posy>0</posy>
						<width>450</width>
						<height>45</height>
						<font>font12</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>![ListItem.IsRecording | ListItem.HasTimer]</visible>
					</control>
					<control type="label">
						<posx>600</posx>
						<posy>0</posy>
						<width>375</width>
						<height>45</height>
						<font>font12</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
				</itemlayout>
				<focusedlayout height="52" width="615">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>615</width>
						<height>45</height>
						<texture border="12">button-default-focus.png</texture>
						<visible>Control.HasFocus(11)</visible>
					</control>
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>150</width>
						<height>45</height>
						<selectedcolor>listselected-text</selectedcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>
					<control type="image">
						<posx>180</posx>
						<posy>8</posy>
						<width>30</width>
						<height>30</height>
						<texture>overlayisrecording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<posx>180</posx>
						<posy>8</posy>
						<width>30</width>
						<height>30</height>
						<texture>overlayhastimer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>
					<control type="label">
						<posx>600</posx>
						<posy>0</posy>
						<width>450</width>
						<height>45</height>
						<font>font12</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>![ListItem.IsRecording | ListItem.HasTimer]</visible>
					</control>
					<control type="label">
						<posx>600</posx>
						<posy>0</posy>
						<width>375</width>
						<height>45</height>
						<font>font12</font>
						<selectedcolor>listselected-text</selectedcolor>
						<align>right</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<posx>1266</posx>
				<posy>195</posy>
				<width>30</width>
				<height>735</height>
				<onleft>11</onleft>
				<onright>11</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<animation condition="!Control.HasFocus(60) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
			</control>
			<control type="label">
				<!-- Page count -->
				<posx>1275</posx>
				<posy>960</posy>
				<width>600</width>
				<height>30</height>
				<font>font12</font>
				<align>right</align>
				<label>($INFO[Container(11).NumItems]) $LOCALIZE[31025] - $LOCALIZE[31024] ([COLOR=blue]$INFO[Container(11).CurrentPage]/$INFO[Container(11).NumPages][/COLOR])</label>
			</control>
		</control>
	</controls>
</window>