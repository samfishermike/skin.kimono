<window>
	<onload condition="Skin.HasSetting(tv_theme) + !SubString(Window(Videos).Property(CinemaExperienceRunning),True)">RunScript(script.tvtunes,backend=True)</onload>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	<views>50,560</views>
	<onunload>Skin.Reset(ScreenSettingVisible)</onunload>
	<include>screen-fade</include>
	<controls>
		<visible>!Window.IsVisible(movieinformation)</visible>
		<include>background</include>
		<include>Fake-Overlay</include>

		<include>topbar</include>

		<control type="group">
			<!-- Various Views of Video library node -->
			<visible>![IsEmpty(ListItem.Label) + IsEmpty(Container().ListItem(1).Label)]</visible>
			<include file="View-VideoList.xml">VideoListView</include>
			<include file="View-PVR.xml">PVRLiveTVView</include>
		</control>
		<control type="group">
			<!-- No Label tag means video addon is busy pulling in content, so show a busy animation -->
			<visible>IsEmpty(ListItem.Label) + IsEmpty(Container().ListItem(1).Label) + System.IdleTime(1) + !Window.IsVisible(busydialog)</visible>
			<include>fadebackground</include>
			<control type="image">
				<!-- Busy animation -->
				<left>864</left>
				<top>435</top>
				<width>192</width>
				<height>192</height>
				<texture>busy.png</texture>
				<aspectratio>keep</aspectratio>
				<include>busy-spin</include>
			</control>
		</control>

		<include>bottombar</include>

		<control type="group">
			<!-- Screen Setting Menu -->
			<left>0</left>
			<top>1080</top>
			<visible>Skin.HasSetting(ScreenSettingVisible)</visible>
			<control type="button">
				<!--Hidden button to close the menu when its focused-->
				<include>fullscreenimage</include>
				<texturenofocus>-</texturenofocus>
				<texturefocus>-</texturefocus>
				<onclick>Skin.Reset(ScreenSettingVisible)</onclick>
			</control>
			<animation effect="slide" time="0" start="0,0" end="0,-1080">Visible</animation>
			<control type="image">
				<!-- Button background -->
				<left>1340</left>
				<top>96</top>
				<width>594</width>
				<height>888</height>
				<texture>ButtonUnfocus.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>1355</left>
				<top>104</top>
				<width>564</width>
				<height>864</height>
				<onup>993</onup>
				<itemgap>0</itemgap>
				<visible>Skin.HasSetting(ScreenSettingVisible)</visible>
				<control type="button" id="2">
					<!-- View as button -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
				</control>
				<control type="radiobutton" id="1198">
					<!-- Tilt list view icons button  -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltvideolisticon)</onclick>
					<selected>Skin.HasSetting(tiltvideolisticon)</selected>
					<radioposx>495</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197">
					<!-- Tilt wall view icons button -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltvideowallicon)</onclick>
					<selected>Skin.HasSetting(tiltvideowallicon)</selected>
					<radioposx>495</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3">
					<!-- Sort by button -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
				</control>
				<control type="togglebutton" id="4">
					<!-- Sort direction button -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
				</control>
				<control type="button" id="10">
					<!-- Show button -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<visible>!Skin.HasSetting(watched_filtering_toggle)</visible>
				</control>
				<control type="button" id="14">
					<!-- Watched video toggle button -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[20367]</label>
					<font>font11</font>
					<visible>Skin.HasSetting(watched_filtering_toggle)</visible>
				</control>
				<control type="button" id="8">
					<!-- Search button -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[137]</label>
					<font>font11</font>
				</control>
				<control type="edit" id="19">
					<!-- Filter button -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[587]</label>
					<textwidth>510</textwidth>
					<visible>!Container.CanFilterAdvanced</visible>
				</control>
				<control type="radiobutton" id="98">
					<!-- Advanced filter button -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[587]</label>
					<font>font11</font>
					<selected>Container.Filtered</selected>
					<onclick>Filter</onclick>
					<radioposx>495</radioposx>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<control type="button" id="16">
					<!-- Party mode button -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[589]</label>
					<font>font11</font>
					<visible>Container.Content(MusicVideos)</visible>
				</control>
				<control type="radiobutton" id="11">
					<!-- Unlock shares button -->
					<label>$LOCALIZE[20336]</label>
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<onclick>Mastermode</onclick>
					<selected>system.ismaster</selected>
					<radioposx>495</radioposx>
					<visible>system.haslocks</visible>
				</control>
				<control type="button" id="1199">
					<!-- Goto playlist button -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[13350]</label>
					<onclick>$VAR[PlayList]</onclick>
					<visible>Player.HasMedia</visible>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
					<visible>!Window.IsVisible(MusicPlaylist) + !Window.IsVisible(VideoPlaylist)</visible>
				</control>
				<control type="togglebutton" id="20">
					<!-- Update library button -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[653]</label>
					<altlabel>$LOCALIZE[13353]</altlabel>
					<usealttexture>library.isscanningvideo</usealttexture>
				</control>
				<control type="button" id="1200">
					<!-- player controls button -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<visible>Player.HasAudio | Player.HasVideo</visible>
				</control>
				<control type="button" id="22">
					<!-- now playing -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[13350]</label>
					<onclick>ActivateWindow(videoplaylist)</onclick>
					<visible>Player.HasVideo</visible>
				</control>
			</control>
		</control>

	</controls>
</window>