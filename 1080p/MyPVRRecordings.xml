<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50</views>
	<include>screen-fade</include>
	<controls>
		<include>backgroundvideo</include>
		<include>Fake-Overlay</include>
		<control type="grouplist">
			<left>1419</left>
			<top>52</top>
			<width>auto</width>
			<height>108</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<!-- Video screen heading -->
				<width max="384">auto</width>
				<height>108</height>
				<label>$VAR[PVRHeading]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label">
				<!-- Number of files -->
				<width max="120">auto</width>
				<height>108</height>
				<label>$INFO[Container.NumItems,(,)]</label>
				<aligny>top</aligny>
			</control>
		</control>
		<control type="group">
			<include file="View-PVR.xml">PVRListView</include>
		</control>
		<control type="group">
			<!-- Screen Settings Menu -->
			<left>0</left>
			<top>1080</top>
			<include>Screen-settings</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>660</left>
				<top>195</top>
				<width>594</width>
				<height>678</height>
				<texture border="12">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>675</left>
				<top>210</top>
				<width>564</width>
				<height>648</height>
				<onright>15</onright>
				<onleft>15</onleft>
				<itemgap>0</itemgap>
				<control type="button" id="2">
					<!-- View as button -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
				</control>
				<control type="button" id="3">
					<!-- Sort by button -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
				</control>
				<control type="togglebutton" id="4">
					<!-- Sort direction button -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
				</control>
				<control type="radiobutton" id="5">
					<!--Group items-->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[19270]</label>
					<font>font11</font>
					<visible>[Window.IsVisible(tvrecordings) | Window.IsVisible(radiorecordings)]</visible>
				</control>
				<control type="button" id="28">
					<!--Change Channel Groups-->
					<width>564</width>
					<height>72</height>
					<label>-</label>
					<font>font11</font>
				</control>
				<control type="button" id="901">
					<!-- Channels -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[19019]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvchannels)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiochannels)</onclick>
				</control>
				<control type="button" id="902">
					<!-- Guide -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[22020]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvguide)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radioguide)</onclick>
				</control>
				<control type="button" id="904">
					<!-- Search -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[137]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvsearch)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiosearch)</onclick>
				</control>
				<control type="button" id="905">
					<!-- Timers -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[19040]</label>
					<font>font11</font>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(tvtimers)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(radiotimers)</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>