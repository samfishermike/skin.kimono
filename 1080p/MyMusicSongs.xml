<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>screen-fade</include>
	<previouswindow>Home</previouswindow>
	<backgroundcolor>0xffe6e6e6</backgroundcolor>
	<views>50</views>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<control type="grouplist">
			<left>1419</left>
			<top>75</top>
			<width>auto</width>
			<height>108</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<!-- Music screen headings -->
				<width max="384">auto</width>
				<height>108</height>
				<label>$VAR[MusicHeadings]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label">
				<!-- Number of files -->
				<top>20</top>
				<width max="120">auto</width>
				<height>57</height>
				<label>$INFO[Container.NumItems,(,)]</label>
			</control>
		</control>
		<include>AlbumListView</include>
		<control type="group">
			<top>1080</top>
			<include>View-as</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>690</left>
				<top>210</top>
				<width>594</width>
				<height>672</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>708</left>
				<top>225</top>
				<width>558</width>
				<height>648</height>
				<onright>50</onright>
				<onleft>50</onleft>
				<itemgap>0</itemgap>
				<control type="button" id="2">
					<!-- View type -->
					<width>558</width>
					<height>72</height>
					<font>font12</font>
					<label>$LOCALIZE[100]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="radiobutton" id="1198">
					<!-- Tilt icon list view -->
					<width>558</width>
					<height>72</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmusiclisticon)</onclick>
					<selected>Skin.HasSetting(tiltmusiclisticon)</selected>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197">
					<!-- Tilt icon wall view -->
					<width>558</width>
					<height>72</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmusicwallicon)</onclick>
					<selected>Skin.HasSetting(tiltmusicwallicon)</selected>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3">
					<!-- Sort by -->
					<width>558</width>
					<height>72</height>
					<font>font12</font>
					<label>$LOCALIZE[103]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="togglebutton" id="4">
					<!-- Sort direction -->
					<width>558</width>
					<height>72</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="radiobutton" id="5">
					<!-- Library -->
					<width>558</width>
					<height>72</height>
					<font>font12</font>
					<textoffsetx>15</textoffsetx>
					<label>$LOCALIZE[14022] $LOCALIZE[456]</label>
					<onclick>ReplaceWindow(mymusiclibrary)</onclick>
					<selected>Window.IsVisible(musiclibrary)</selected>
					<radioposx>495</radioposx>
				</control>
				<control type="edit" id="19">
					<!-- Filter -->
					<width>558</width>
					<height>72</height>
					<font>font12</font>
					<label>$LOCALIZE[587]</label>
					<textwidth>510</textwidth>
					<aligny>center</aligny>
					<textoffsetx>15</textoffsetx>
					<visible>!Container.CanFilterAdvanced</visible>
				</control>
				<control type="radiobutton" id="20">
					<!-- Advanced filter -->
					<width>558</width>
					<height>72</height>
					<label>$LOCALIZE[587]</label>
					<font>font12</font>
					<selected>Container.Filtered</selected>
					<onclick>Filter</onclick>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<control type="button" id="11">
					<!-- Rip CD -->
					<width>558</width>
					<height>72</height>
					<font>font12</font>
					<label>$LOCALIZE[600]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="1200">
					<!-- Player controls -->
					<width>558</width>
					<height>72</height>
					<font>font12</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<textoffsetx>15</textoffsetx>
					<visible>Player.HasAudio | Player.HasVideo</visible>
				</control>
			</control>
		</control>
	</controls>
</window>