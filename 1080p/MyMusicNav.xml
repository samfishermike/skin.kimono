<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>screen-fade</include>
	<previouswindow>Home</previouswindow>
	<views>50</views>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>

		<include>topbar</include>

		<include>AlbumListView</include>

		<include>bottombar</include>

		<control type="group">
			<!-- View-As Menu -->
			<left>0</left>
			<top>1080</top>
			<include>View-as</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>690</left>
				<top>135</top>
				<width>594</width>
				<height>825</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>708</left>
				<top>150</top>
				<width>558</width>
				<height>792</height>
				<onright>50</onright>
				<onleft>50</onleft>
				<itemgap>0</itemgap>
				<control type="button" id="2">
					<!-- View type -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="radiobutton" id="1198">
					<!-- Tilt icon list view -->
					<width>558</width>
					<height>72</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmusiclisticon)</onclick>
					<selected>Skin.HasSetting(tiltmusiclisticon)</selected>
					<radioposx>495</radioposx>
					<textoffsetx>15</textoffsetx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197">
					<!-- Tilt icon wall view -->
					<width>558</width>
					<height>72</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmusicwallicon)</onclick>
					<selected>Skin.HasSetting(tiltmusicwallicon)</selected>
					<radioposx>495</radioposx>
					<textoffsetx>15</textoffsetx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3">
					<!-- Sort by -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="togglebutton" id="4">
					<!-- Sort direction -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="radiobutton" id="5">
					<!-- Library -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[29800]</label>
					<selected>Window.IsVisible(musiclibrary)</selected>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
				</control>
				<control type="button" id="8">
					<!-- Search -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[137]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="edit" id="19">
					<!-- Filter -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[587]</label>
					<textwidth>510</textwidth>
					<textoffsetx>15</textoffsetx>
					<visible>!Container.CanFilterAdvanced</visible>
				</control>
				<control type="radiobutton" id="98">
					<!-- Advanced filter -->
					<width>558</width>
					<height>72</height>
					<label>$LOCALIZE[587]</label>
					<font>font11</font>
					<selected>Container.Filtered</selected>
					<onclick>Filter</onclick>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<control type="button" id="17">
					<!-- CDDB -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[31226]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="16">
					<!-- Party mode -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[589]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="1199">
					<!-- Goto playlist -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[13350]</label>
					<onclick>$VAR[PlayList]</onclick>
					<textoffsetx>15</textoffsetx>
					<visible>Player.HasMedia</visible>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
					<visible>!Window.IsVisible(MusicPlaylist) + !Window.IsVisible(VideoPlaylist)</visible>
				</control>
				<control type="togglebutton" id="20">
					<!-- Update library -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[653]</label>
					<altlabel>$LOCALIZE[13353]</altlabel>
					<usealttexture>library.isscanningmusic</usealttexture>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="1200">
					<!-- Player controls -->
					<width>558</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<textoffsetx>15</textoffsetx>
					<visible>Player.HasAudio | Player.HasVideo</visible>
				</control>
				<control type="button" id="22">
					<!-- Now playing -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[13350]</label>
					<onclick>ActivateWindow(musicplaylist)</onclick>
					<textoffsetx>15</textoffsetx>
					<visible>Player.HasAudio</visible>
				</control>
			</control>
		</control>
	</controls>
</window>