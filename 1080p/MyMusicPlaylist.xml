<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>screen-fade</include>
	<backgroundcolor>0xffe6e6e6</backgroundcolor>
	<controls>
		<include>background</include>
		<control type="label">
			<!-- Screen heading -->
			<left>1419</left>
			<top>38</top>
			<width>471</width>
			<height>75</height>
			<label>$LOCALIZE[10517]</label>
			<font>font18</font>
			<wrapmultiline>true</wrapmultiline>
		</control>
		<include file="View-List.xml">ListView</include>
		<control type="image">
			<left>183</left>
			<top>225</top>
			<width>576</width>
			<height>576</height>
			<texture background="true" diffuse="mask-squ.png">$INFO[ListItem.Icon]</texture>
			<aspectratio scalediffuse="false">keep</aspectratio>
		</control>
		<control type="group">
			<visible>Player.HasAudio</visible>
			<control type="progress">
				<left>52</left>
				<top>852</top>
				<width>690</width>
				<height>22</height>
				<info>Player.Progress</info>
				<colordiffuse>ProgressBarColor</colordiffuse>
			</control>
			<control type="label">
				<left>758</left>
				<top>840</top>
				<width>270</width>
				<height>38</height>
				<font>font12</font>
				<label>$INFO[Player.Time]$INFO[Player.Duration,/ ]</label>
			</control>
			<control type="label">
				<left>52</left>
				<top>878</top>
				<width>720</width>
				<height>38</height>
				<label>$INFO[MusicPlayer.Artist]</label>
				<font>font12</font>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<left>52</left>
				<top>922</top>
				<width>990</width>
				<height>38</height>
				<font>font12</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
		</control>
		<control type="group">
			<left>0</left>
			<top>1080</top>
			<include>View-as</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>690</left>
				<top>318</top>
				<width>597</width>
				<height>459</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>716</left>
				<top>338</top>
				<width>543</width>
				<height>420</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<itemgap>0</itemgap>
				<control type="button" id="20">
					<!-- Shuffle -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<label>$LOCALIZE[191]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="radiobutton" id="28">
					<!-- Randomize -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<label>$LOCALIZE[13319]</label>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
				</control>
				<control type="button" id="26">
					<!-- Repeat -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="21">
					<!-- Save -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<label>$LOCALIZE[190]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="22">
					<!-- Clear -->
					<width>543</width>
					<height>84</height>
					<font>font12</font>
					<label>$LOCALIZE[192]</label>
					<textoffsetx>15</textoffsetx>
				</control>
			</control>
		</control>
	</controls>
</window>