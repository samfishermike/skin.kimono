<window>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<previouswindow>Home</previouswindow>
	<include>screen-fade</include>
	<controls>
		<include>backgroundvideo</include>
		<control type="label">
			<!-- Screen heading -->
			<left>1419</left>
			<top>75</top>
			<width>471</width>
			<height>48</height>
			<font>font18</font>
			<label>$VAR[PVRHeading]</label>
		</control>
		<control type="group">
			<!-- Current Icon/Channel playing -->
			<control type="grouplist">
				<visible>Control.IsVisible(11) | Control.IsVisible(12) | Control.IsVisible(13) | Control.IsVisible(15) | Control.IsVisible(16)</visible>
				<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>
				<left>30</left>
				<top>174</top>
				<width>942</width>
				<height>867</height>
				<itemgap>3</itemgap>
				<control type="group">
					<visible>!Player.HasVideo | [Player.HasVideo + Skin.HasSetting(HomeViewToggle)]</visible>
					<left>0</left>
					<width>384</width>
					<height>384</height>
					<control type="image">
						<left>279</left>
						<width>384</width>
						<height>384</height>
						<texture fallback="DefaultTvshows.png" background="true" diffuse="mask-rect.png">$INFO[ListItem.Thumb]</texture>
						<aspectratio scalediffuse="false">keep</aspectratio>
						<aligny>top</aligny>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<left>279</left>
						<width>384</width>
						<height>384</height>
						<texture fallback="DefaultTvshows.png" background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
						<aligny>top</aligny>
						<visible>IsEmpty(ListItem.Thumb) + !IsEmpty(ListItem.Icon)</visible>
					</control>
				</control>
				<control type="group">
					<left>0</left>
					<width>768</width>
					<height>384</height>
					<visible>Player.HasVideo + !Skin.HasSetting(HomeViewToggle)</visible>
					<control type="videowindow">
						<left>87</left>
						<width>768</width>
						<height>384</height>
						<aspectratio>keep</aspectratio>
						<align>center</align>
						<aligny>top</aligny>
					</control>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Title]</label>
					<width>942</width>
					<height>51</height>
					<font>font18</font>
					<align>center</align>
					<wrapmultiline>true</wrapmultiline>
				</control>
				<control type="label">
					<!-- Start time -->
					<visible>!IsEmpty(ListItem.Plot) + !IsEmpty(ListItem.StartTime) + !IsEmpty(ListItem.EndTime)+ !Control.IsVisible(13)</visible>
					<width>942</width>
					<height>45</height>
					<align>center</align>
					<label>$LOCALIZE[31134] $INFO[ListItem.StartTime] - $LOCALIZE[31129] $INFO[ListItem.EndTime]</label>
				</control>
				<control type="image">
					<visible>!IsEmpty(ListItem.Title)</visible>
					<width>942</width>
					<height>9</height>
					<texture>separator.png</texture>
				</control>
				<control type="textbox">
					<!-- Plot -->
					<width>942</width>
					<height>321</height>
					<font>font12</font>
					<align>left</align>
					<label>$INFO[ListItem.Plot]</label>
					<visible>!IsEmpty(ListItem.Plot)</visible>
				</control>
				<control type="image">
					<visible>!IsEmpty(ListItem.Plot)</visible>
					<width>942</width>
					<height>9</height>
					<texture>separator.png</texture>
				</control>
			</control>
		</control>
		
		<control type="group" id="50">
			<include file="View-PVR.xml">PVRTVListView</include>
			<include file="View-PVR.xml">PVRRadioListView</include>
			<include file="View-PVR.xml">PVRTimelineView</include>
			<include file="View-PVR.xml">PVRRecordListView</include>
			<include file="View-PVR.xml">PVRTimerListView</include>
			<include file="View-PVR.xml">PVRChannelListView</include>
			<include file="View-PVR.xml">PVRNowNextListView</include>
			<include file="View-PVR.xml">PVRSearchListView</include>
		</control>
		
		<control type="group">
			<top>1080</top>
			<include>View-as</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>660</left>
				<top>303</top>
				<width>597</width>
				<height>492</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>687</left>
				<top>321</top>
				<width>543</width>
				<height>450</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<itemgap>0</itemgap>
				<control type="button" id="32">
					<!-- TV Channels -->
					<left>0</left>
					<top>0</top>
					<width>543</width>
					<height>75</height>
					<font>font12</font>
					<label>$LOCALIZE[19023]</label>
					<textoffsetx>30</textoffsetx>
				</control>
				<control type="button" id="33">
					<!-- Radio Channels -->
					<left>0</left>
					<top>75</top>
					<width>543</width>
					<height>75</height>
					<font>font12</font>
					<label>$LOCALIZE[19024]</label>
					<textoffsetx>30</textoffsetx>
				</control>
				<control type="button" id="31">
					<!-- TV Guide -->
					<left>0</left>
					<top>150</top>
					<width>543</width>
					<height>75</height>
					<label>$LOCALIZE[19222]: $LOCALIZE[19030]</label>
					<font>font12</font>
					<textoffsetx>30</textoffsetx>
				</control>
				<control type="button" id="34">
					<!-- Recordings -->
					<left>0</left>
					<top>225</top>
					<width>543</width>
					<height>75</height>
					<label>$LOCALIZE[19163]</label>
					<font>font12</font>
					<textoffsetx>30</textoffsetx>
				</control>
				<control type="button" id="35">
					<!-- Timers -->
					<left>0</left>
					<top>300</top>
					<width>543</width>
					<height>75</height>
					<label>$LOCALIZE[19040]</label>
					<textoffsetx>30</textoffsetx>
				</control>
				<control type="button" id="36">
					<!-- Search -->
					<left>0</left>
					<top>375</top>
					<width>543</width>
					<height>75</height>
					<label>$LOCALIZE[137]</label>
					<font>font12</font>
					<textoffsetx>30</textoffsetx>
				</control>
			</control>
		</control>
	</controls>
</window>