<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>screen-fade</include>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<control type="label">
			<!-- Screen heading -->
			<left>1419</left>
			<top>75</top>
			<width>464</width>
			<height>56</height>
			<label>$LOCALIZE[31555]</label>
			<font>font20</font>
		</control>
		<control type="list" id="2">
			<left>1074</left>
			<top>168</top>
			<width>796</width>
			<height>675</height>
			<onleft>4</onleft>
			<onright>23</onright>
			<onup>2</onup>
			<ondown>2</ondown>
			<scrolltime>1</scrolltime>
			<viewtype label="31941">List</viewtype>
			<pagecontrol>23</pagecontrol>
			<itemlayout height="84">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>756</width>
					<height>84</height>
				</control>
				<control type="label">
					<left>32</left>
					<top>0</top>
					<width>756</width>
					<height>84</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="84">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>756</width>
					<height>84</height>
					<texture border="12">button-default-focus.png</texture>
					<visible>!Control.HasFocus(4)</visible>
				</control>
				<control type="label">
					<left>32</left>
					<top>0</top>
					<width>670</width>
					<height>84</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="23">
			<left>1866</left>
			<top>168</top>
			<width>27</width>
			<height>675</height>
			<onleft>2</onleft>
			<onright>4</onright>
			<animation condition="!Control.HasFocus(23) + !Container.Scrolling + !StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31875])" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>!StringCompare(Skin.String(show-scrollbar),$LOCALIZE[31877])</visible>
		</control>
		<control type="image">
			<left>297</left>
			<top>168</top>
			<width>480</width>
			<height>480</height>
			<texture fallback="icon-profile.png" diffuse="mask-rect.png">$INFO[Container(2).ListItem.Icon]</texture>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="fadelabel" id="3">
			<!-- Last loaded profile -->
			<left>15</left>
			<top>675</top>
			<width>1044</width>
			<height>60</height>
			<label>$LOCALIZE[13204] $INFO[System.ProfileName]</label>
			<font>font12</font>
			<align>center</align>
		</control>
		<control type="label">
			<!-- Profile to auto login -->
			<left>15</left>
			<top>750</top>
			<width>1044</width>
			<height>60</height>
			<font>font12</font>
			<align>center</align>
			<label>$LOCALIZE[14061]: $INFO[System.ProfileAutoLogin]</label>
			<visible>!System.HasLoginScreen + !IsEmpty(System.ProfileAutoLogin)</visible>
		</control>
		<control type="group">
			<top>1080</top>
			<include>Screen-settings</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Dialog background -->
				<left>660</left>
				<top>423</top>
				<width>594</width>
				<height>261</height>
				<texture border="12">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>675</left>
				<top>450</top>
				<width>564</width>
				<height>225</height>
				<onleft>2</onleft>
				<onright>2</onright>
				<itemgap>0</itemgap>
				<control type="radiobutton" id="4">
					<!-- Enable login screen -->
					<width>564</width>
					<height>75</height>
					<label>$LOCALIZE[20096]</label>
					<font>font12</font>
					<aligny>top</aligny>
					<textoffsety>12</textoffsety>
					<radioposx>495</radioposx>
				</control>
				<control type="button" id="5">
					<!-- Choose auto login user -->
					<width>564</width>
					<height>75</height>
					<textoffsety>12</textoffsety>
					<label>$LOCALIZE[14061]</label>
					<font>font12</font>
					<aligny>top</aligny>
					<enable>!Window.IsVisible(profilesettings) + !System.HasLoginScreen</enable>
					<visible>!System.HasLoginScreen</visible>
				</control>
				<control type="button">
					<!-- Choose auto login user (grayed out) -->
					<width>564</width>
					<height>75</height>
					<textoffsety>12</textoffsety>
					<label>$LOCALIZE[14061]</label>
					<font>font12</font>
					<aligny>top</aligny>
					<visible>System.HasLoginScreen</visible>
					<enable>false</enable>
				</control>
				<control type="label">
					<width>564</width>
					<height>75</height>
					<font>font12</font>
					<aligny>top</aligny>
					<textoffsetx>27</textoffsetx>
					<label>$INFO[System.ProfileAutoLogin]</label>
					<visible>!System.HasLoginScreen</visible>
				</control>
			</control>
		</control>
	</controls>
</window>