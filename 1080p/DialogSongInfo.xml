<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>999</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>screen-fade</include>
	<controls>
		<include>background</include>
		<control type="label">
			<!-- Song Title -->
			<left>994</left>
			<top>56</top>
			<width>849</width>
			<height>108</height>
			<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			<font>font18</font>
			<label>$INFO[ListItem.Title]</label>
			<wrapmultiline>true</wrapmultiline>
			<aligny>top</aligny>
		</control>
		<control type="image">
			<!-- CD case -->
			<left>207</left>
			<top>57</top>
			<width>579</width>
			<height>579</height>
			<texture>case-cd.png</texture>
			<aspectratio>keep</aspectratio>
			<visible>Skin.HasSetting(media-case) + [Container.Content(songs) | Container.Content(albums)] + !SubString(ListItem.Icon,Default,Left)</visible>
		</control>
		<control type="image">
			<!-- Album cover -->
			<left>274</left>
			<top>105</top>
			<width>480</width>
			<height>480</height>
