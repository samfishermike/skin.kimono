<window>
	<allowoverlay>no</allowoverlay>
	<defaultcontrol>101</defaultcontrol>
	<visible>StringCompare(Skin.String(osd-lyricpath),script.cu.lrclyrics)</visible>
	<include>screen-fade</include>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<control type="image">
				<!-- Solid background -->
				<include>fullscreenimage</include>
				<texture>background.png</texture>
				<visible>!Skin.String(custom-background)</visible>
			</control>
			<control type="image">
				<!-- Custom background -->
				<include>fullscreenimage</include>
				<texture>$INFO[Skin.String(custom-background)]</texture>
				<colordiffuse>osd-background</colordiffuse>
				<visible>Skin.String(custom-background)</visible>
			</control>
			<control type="group">
				<!-- Backgroung fanart image -->
				<control type="image">
					<include>fullscreenimage</include>
					<texture background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
					<aspectratio>scale</aspectratio>
					<fadetime>1000</fadetime>
					<visible>!Skin.HasSetting(background-slideshow)</visible>
				</control>
			</control>
			<control type="group">
				<!-- Background visualisation image -->
				<visible>Skin.HasSetting(HomeViewToggle)</visible>
				<control type="visualisation" id="2">
					<include>fullscreenimage</include>
					<visible>Player.HasAudio + !SubString(Window(VideoLibrary).Property(TvTunesIsAlive),True)</visible>
				</control>
			</control>
			<control type="group">
				<visible>Skin.HasSetting(background-slideshow)</visible>
				<control type="image">
					<!-- Mask out any backgrounds showing around ArtistSlideshow Fanart -->
					<include>fullscreenimage</include>
					<texture>colours/black.png</texture>
					<aspectratio>stretch</aspectratio>
					<visible>SubString(Control.GetLabel(991),blank.png)</visible>
				</control>
				<control type="multiimage" id="991">
					<include>fullscreenimage</include>
					<imagepath fallback="blank.png" background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
					<aspectratio>keep</aspectratio>
					<timeperimage>5000</timeperimage>
					<fadetime>1000</fadetime>
					<randomize>true</randomize>
				</control>
			</control>
			<control type="image">
				<!-- Mask to fade backgrounds -->
				<include>fullscreenimage</include>
				<texture>colours/black.png</texture>
				<colordiffuse>mask-background</colordiffuse>
				<aspectratio>stretch</aspectratio>
				<include>background-fade</include>
				<visible>Skin.HasSetting(background-fanart) | Skin.HasSetting(HomeViewToggle) | Skin.HasSetting(background-slideshow)</visible>
			</control>
			<control type="label">
				<!-- Scraper -->
				<left>15</left>
				<top>75</top>
				<width>825</width>
				<height>45</height>
				<label>$LOCALIZE[21870] - $INFO[Control.GetLabel(200)]</label>
				<font>font12</font>
			</control>
			<control type="label" id="200">
				<visible>false</visible>
			</control>
			<control type="label">
				<!--Dialog heading -->
				<left>1419</left>
				<top>75</top>
				<width>540</width>
				<height>56</height>
				<font>font18</font>
				<label>$ADDON[script.cu.lrclyrics 32199]</label>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
			<control type="list" id="110">
				<left>30</left>
				<top>150</top>
				<width>1860</width>
				<height>555</height>
				<onleft>111</onleft>
				<onright>111</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>111</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="60">
					<control type="label">
						<left>930</left>
						<top>0</top>
						<width>1860</width>
						<height>60</height>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="75">
					<control type="label">
						<left>930</left>
						<top>0</top>
						<width>1860</width>
						<height>75</height>
						<font>font22</font>
						<textcolor>lightblue</textcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<left>930</left>
						<top>0</top>
						<width>1860</width>
						<height>75</height>
						<font>font22</font>
						<textcolor>lightblue</textcolor>
						<align>center</align>
						<label fallback="--">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="111">
				<!-- Next page button -->
				<left>1792</left>
				<top>870</top>
				<subtype>page</subtype>
				<font>font12</font>
				<onleft>110</onleft>
				<onright>110</onright>
				<ondown>110</ondown>
				<onup>110</onup>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(110)</visible>
			</control>
			<control type="label" id="2">
				<!-- Pick -->
				<left>30</left>
				<top>195</top>
				<width>1860</width>
				<height>45</height>
				<align>center</align>
				<selectedcolor>listselected-text</selectedcolor>
				<label>$LOCALIZE[179]?</label>
				<visible>Control.IsVisible(120) + ![Control.IsVisible(100) | Control.IsVisible(110)]</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
			<control type="list" id="120">
				<left>30</left>
				<top>210</top>
				<width>1860</width>
				<height>615</height>
				<onleft>121</onleft>
				<onright>121</onright>
				<onup>120</onup>
				<ondown>120</ondown>
				<pagecontrol>121</pagecontrol>
				<scrolltime>200</scrolltime>
				<animation effect="slide" start="0,0" end="30,0" time="0" condition="!Control.IsVisible(121)">Conditional</animation>
				<itemlayout height="60">
					<control type="label">
						<left>15</left>
						<top>0</top>
						<width>1860</width>
						<height>60</height>
						<selectedcolor>listselected-text</selectedcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60">
					<control type="label">
						<left>15</left>
						<top>0</top>
						<width>1860</width>
						<height>60</height>
						<textcolor>listselected-text</textcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="121">
				<!-- Next page button -->
				<left>1792</left>
				<top>870</top>
				<subtype>page</subtype>
				<font>font12</font>
				<onleft>120</onleft>
				<onright>120</onright>
				<ondown>120</ondown>
				<onup>120</onup>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(120)</visible>
			</control>
			<control type="image">
				<!-- CD overlay -->
				<animation effect="slide" start="-177" end="0" time="900" tween="cubic" easing="out" delay="1000">WindowOpen</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="-171" time="100" tween="cubic" easing="in" delay="0" />
					<effect type="fade" start="100" end="0" time="200" />
					<condition type="!Player.Playing" />
				</animation>
				<animation effect="rotate" end="-360" center="auto" time="3000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<left>198</left>
				<top>720</top>
				<width>322</width>
				<height>322</height>
				<texture fallback="DefaultDVDRom.png">$INFO[Player.FolderPath,,/cdart.png]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<visible>!SubString(MusicPlayer.Cover,Default,Left)</visible>
			</control>
			<control type="image">
				<left>-8</left>
				<top>682</top>
				<height>398</height>
				<width>398</width>
				<texture>case-cd.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>Skin.HasSetting(CDcase) + !SubString(MusicPlayer.Cover,Default,Left)</visible>
			</control>
			<control type="image">
				<!-- Album cover -->
				<left>30</left>
				<top>712</top>
				<width>338</width>
				<height>338</height>
				<texture fallback="DefaultAudio.png">$INFO[MusicPlayer.Cover]</texture>
				<aspectratio aligny="bottom">stretch</aspectratio>
			</control>
			<control type="label">
				<!-- Song title -->
				<left>555</left>
				<top>858</top>
				<width>984</width>
				<height>68</height>
				<font>font18</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<!-- Artist -->
				<left>555</left>
				<top>912</top>
				<width>1023</width>
				<height>56</height>
				<font>font12</font>
				<label>$INFO[MusicPlayer.Artist]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<!-- Album name -->
				<left>555</left>
				<top>957</top>
				<width>984</width>
				<height>56</height>
				<font>font12</font>
				<label>$INFO[MusicPlayer.Album]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<!-- Player time -->
				<left>555</left>
				<top>1002</top>
				<width>984</width>
				<height>56</height>
				<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
				<font>font12</font>
			</control>
			<control type="progress" id="1">
				<left>837</left>
				<top>1011</top>
				<width>1028</width>
				<height>24</height>
				<info>Player.Progress</info>
				<colordiffuse>ProgressBarColor</colordiffuse>
			</control>
		</control>
	</controls>
</window>