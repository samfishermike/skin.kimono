<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>screen-fade</include>
	<previouswindow>Home</previouswindow>
	<backgroundcolor>0xffe6e6e6</backgroundcolor>
	<views>50</views>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<control type="grouplist">
			<left>1419</left>
			<top>75</top>
			<width>auto</width>
			<height>56</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<!-- Video screen heading -->
				<width max="384">auto</width>
				<height>56</height>
				<label>$LOCALIZE[31029]</label>
				<font>font18</font>
			</control>
			<control type="label">
				<!-- Number of files -->
				<top>20</top>
				<width max="120">auto</width>
				<height>57</height>
				<label>$INFO[Container.NumItems,(,)]</label>
			</control>
		</control>
		
		<control type="group">
			<!-- Various Views of Addons library -->
			<include file="View-List.xml">ListView</include>
		</control>
		
		<control type="group">
			<top>1080</top>
			<include>View-as</include>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>660</left>
				<top>318</top>
				<width>594</width>
				<height>468</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<left>675</left>
				<top>336</top>
				<width>564</width>
				<height>432</height>
				<onright>50</onright>
				<onleft>50</onleft>
				<itemgap>0</itemgap>
				<control type="button" id="2">
					<!-- View type -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="radiobutton" id="1198">
					<!-- Tilt icon list view -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmisclisticon)</onclick>
					<selected>Skin.HasSetting(tiltmisclisticon)</selected>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197">
					<!-- Tilt icon wall view -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmiscwallicon)</onclick>
					<selected>Skin.HasSetting(tiltmiscwallicon)</selected>
					<textoffsetx>15</textoffsetx>
					<radioposx>495</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3">
					<!-- Sort by -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="togglebutton" id="4">
					<!-- Sort direction -->
					<width>564</width>
					<height>72</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="edit" id="19">
					<!-- Filter -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<label>$LOCALIZE[587]</label>
					<disabledcolor>disabled-text</disabledcolor>
					<textwidth>510</textwidth>
					<textoffsetx>15</textoffsetx>
				</control>
				<control type="button" id="1200">
					<!-- Player controls -->
					<width>564</width>
					<height>72</height>
					<font>font11</font>
					<textoffsetx>15</textoffsetx>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<enable>Player.HasAudio | Player.HasVideo</enable>
				</control>
			</control>
		</control>
	</controls>
</window>