<?xml version="1.0" encoding="utf-8"?>
<window>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<visible>IsEmpty(Window(Home).Property(script.cinemavision.running))</visible>
		<control type="group">
			<animation effect="slide" end="0,-150" condition="Window.IsActive(extendedprogressdialog) | Window.IsActive(startup) | Window.IsActive(fullscreenvideo)">Conditional</animation>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>600</width>
				<height>84</height>
				<texture colordiffuse="BarBorders">colours/white.png</texture>
			</control>
			<control type="image" id="400">
				<left>10</left>
				<top>10</top>
				<width>64</width>
				<height>64</height>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label" id="401">
				<!-- Caption -->
				<left>84</left>
				<top>1</top>
				<width>600</width>
				<height>24</height>
				<textcolor>light-text</textcolor>
				<selectedcolor>light-text</selectedcolor>
				<font>font11</font>
				<align>center</align>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label" id="402">
				<!-- Description -->
				<left>84</left>
				<top>25</top>
				<width>600</width>
				<height>60</height>
				<textcolor>light-text</textcolor>
				<selectedcolor>light-text</selectedcolor>
				<font>font10</font>
				<align>center</align>
				<wrapmultiline>true</wrapmultiline>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
		</control>
	</controls>
</window>
